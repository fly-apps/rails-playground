<div id="<%= dom_id sandwich %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= sandwich.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Category:</strong>
    <%= sandwich.category %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this sandwich", sandwich, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this sandwich', edit_sandwich_path(sandwich), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
